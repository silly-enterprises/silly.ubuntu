#!/usr/bin/make -f

%:
	dh $@ --with python3

override_dh_auto_build:
	pandoc -s -t man man/silly-base-config.1.md -o debian/silly-base-config.1 || true

override_dh_auto_test:
	:


override_dh_install:
        chmod 755 debian/silly-base-config/usr/share/sillyctl/samples/bashrc/10-silly-aliases.sh
        chmod 755 debian/silly-base-config/usr/share/sillyctl/samples/bashrc/20-silly-wsl-functions.sh


